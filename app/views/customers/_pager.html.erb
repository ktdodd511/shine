<nav>
  <ul class="pager">
    <li class="previous text-center page-link <%= page == 0 ? 'disabled' : '' %>">
      <% if page > 0 %>
        <%= link_to "&larr; Previous".html_safe, customers_path(keywords: keywords, page: page - 1) %> | 
      <% end %>
      <%= link_to "Next &rarr;".html_safe, customers_path(keywords: keywords, page: page + 1) %>
    </li>
  </ul>
</nav>
